// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  
 
}

model User {
  id            String  @id @default(uuid())
  username      String  @unique
  password      String
  name          String
  image         String
  events        Event[]
}

model Category {
  id            String  @id @default(uuid())
  name          String
  events        Event[]
}

model Event {
  id          String @id @default(uuid())
  title       String
  description String
  image       String
  location    String
  startTime   DateTime
  endTime     DateTime
  lineup      String @db.VarChar(900)
  //relations
  userId      String

  categories Category[]

  createdBy  User     @relation(fields: [userId], references: [id],  onDelete: Cascade, onUpdate: Cascade)
 
 @@index([userId])

}

model Contact {
  id          String @id @default(uuid())
  name        String
  email       String
  message     String
}

model Articles {
  id         String  @id @default(uuid())
  image      String
  text       String   @db.VarChar(30000)
}

model ImgAnimation {
  id        String  @id @default(uuid())
  image     String
}