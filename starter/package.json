{
  "name": "express-events",
  "version": "1.0.0",
  "type": "module",
  "description": "REST API for managing events",
  "main": "src/index.js",
  "prisma": {
    "seed": "node ./prisma/seed.js"
  },
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "build": "npm install && npx prisma generate",
    "test-positive": "newman run \"../postman/collections/Events API.json\" -e \"../postman/environments/Local.postman_environment.json\"",
    "test-negative": "newman run \"../postman/collections/Events API Negative.json\" -e \"../postman/environments/Local.postman_environment.json\"",
    "test": "npm run test-positive && npm run test-negative"
  },
  "author": "Xagly Montilva",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^5.16.1",
    "@prisma/client": "^5.15.1",
    "@sentry/node": "^7.74.0",
    "@supabase/supabase-js": "^2.44.2",
    "axios": "^1.6.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "pg": "^8.12.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^5.15.1"
  },
  "engines": {
    "node": ">=18 <19"
  }
}
